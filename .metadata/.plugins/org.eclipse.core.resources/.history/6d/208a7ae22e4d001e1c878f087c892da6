/* select 선택 값 고정 */
$(function() {
	var optionList = $('#mode option');
	for (var i = 0; i < optionList.length; i++) {
		if (optionList[i].value == '${requestScope.pageInfo.mode}') {
			optionList[i].selected = true;
		}
	}
	$('#keyword').val('${requestScope.pageInfo.keyword}');
})
	
